<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/backup_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/restore_btn"
        android:text="@string/default_storage_backup_date"
        android:textColor="@color/colorPrimaryText"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/backup_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/backup_date"
        android:layout_toStartOf="@+id/restore_btn"
        android:text="@string/default_storage_backup_size"
        android:textColor="@color/colorPrimaryText"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/restore_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="@string/restore_backup_btn"
        android:textSize="12sp"/>

</RelativeLayout>